<!-- Begin - wrapper -->
<div class="layout__wrapper">

  {% if page.sticky_navigation__left %}
    <!-- Begin - navigation -->
    <aside class="sticky-navigation sticky-navigation--left">
      {% if page.sticky_navigation__left %}
        {{ page.sticky_navigation__left }}
      {% endif %}
    </aside>
    <!-- End - navigation -->
  {% endif %}

  {% if page.sidr_right__primary %}
    <!-- Begin - sidr source provider -->
    <aside class="sidr-source-provider">

      <!-- Begin - navigation -->
      <nav class="slinky-menu" role="navigation">
        {% if page.sidr_right__primary %}
          {{ page.sidr_right__primary }}
        {% endif %}
      </nav>
      <!-- End - navigation -->

    </aside>
    <!-- End - sidr source provider -->
  {% endif %}

  <!-- Begin - content -->
  <main class="layout__content" role="main">
    <header class="flexy-header flexy-header--static hidden"></header>

    <!-- Begin - header sticky -->
    <header class="flexy-header flexy-header--sticky flexy-header--pinned">
      <div class="flexy-header__row">
        <div class="container-fluid">
          <div class="flexy-row">

            <!-- Begin - logo -->
            <a href="{{ url('<front>') }}" class="flexy-header__logo">
              <img src="{{ base_path ~ directory }}/dist/images/logo.svg">
            </a>
            <!-- End - logo -->

            <div class="flexy-spacer"></div>

            <!-- Begin - responsive toggle -->
            <button
              class="flexy-header__sidebar-toggle sidr-toggle--right">
              <span class="icon fa fa-bars"></span>
            </button>
            <!-- End - responsive toggle -->

          </div>
        </div>
      </div>
    </header>
    <!-- End - header sticky -->

    <!-- Begin - content -->
    <div class="page-content">
      <div class="container-fluid">
        <a id="main-content"></a>

        {# Highlighted #}
        {% if page.highlighted %}
          {% block highlighted %}
            <div class="highlighted">
              {{ page.highlighted }}
            </div>
          {% endblock %}
        {% endif %}

        {# Help #}
        {% if page.help %}
          {% block help %}
            {{ page.help }}
          {% endblock %}
        {% endif %}

        {# Begin - content #}
        {%
          set content_classes = [
          page.content__right_sidebar ? 'col-xs-12 col-lg-8',
          page.content__right_sidebar is empty ? 'col-xs-12'
        ]
        %}
        <div class="row">

          {# Begin - content #}
          {% block content %}
            <div{{ content_attributes.addClass(content_classes) }}>
              {{ page.content }}
            </div>
          {% endblock %}
          {# End - content #}

          {# Begin - sidebar right #}
          {% if page.content__right_sidebar %}
            {% block content__right_sidebar %}
              <aside class="col-xs-12 col-lg-4" role="complementary">
                {{ page.content__right_sidebar }}
              </aside>
            {% endblock %}
          {% endif %}
          {# End - sidebar right #}

        </div>
        {# End - content #}

      </div>
    </div>
    <!-- End - content -->

  </main>
  <!-- End - content -->

  <!-- Begin - footer -->
  <footer class="layout__footer">

    {% if page.footer %}
      {% block footer %}
        <!-- Begin - first row -->
        <div class="layout__footer-row layout__footer-row--first">
          <div class="container">
            {{ page.footer }}
          </div>
        </div>
        <!-- End - first row -->
      {% endblock %}
    {% endif %}

    <!-- Begin - second row -->
    <div class="layout__footer-row layout__footer-row--second">
      <div class="container-fluid">
        <div class="flexy-row">
          <div class="flexy-spacer"></div>

          <!-- Begin - social icons -->
          <nav role="navigation">
            <div class="flexy-list">

              {% if theme_settings.social.facebook.active %}
                <div>
                  <a
                    href="{{ theme_settings.social.facebook.url }}"
                    target="_blank"
                    data-toggle="tooltip"
                    data-placement="top"
                    class="social-icon social-icon--facebook"
                    title="{{ theme_settings.social.facebook.tooltip }}">
                    <div class="pentagon"></div>
                    <span class="icon fa fa-facebook-f"></span>
                  </a>
                </div>
              {% endif %}

              {% if theme_settings.social.twitter.active %}
                <div>
                  <a
