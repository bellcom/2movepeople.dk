                    <div class="pentagon"></div>
                    <span class="icon fa fa-github"></span>
                  </a>
                </div>
              {% endif %}

            </div>
          </nav>
          <!-- End - social icons -->

        </div>
      </div>
    </div>
    <!-- End - second row -->

  </footer>
  <!-- End - footer -->

</div>
<!-- End - wrapper -->
